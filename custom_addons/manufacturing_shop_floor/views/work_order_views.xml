<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Work Order List View -->
    <record id="view_work_order_list" model="ir.ui.view">
        <field name="name">manufacturing.work.order.list</field>
        <field name="model">manufacturing.work.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="work_center_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Work Order Form View -->
    <record id="view_work_order_form" model="ir.ui.view">
        <field name="name">manufacturing.work.order.form</field>
        <field name="model">manufacturing.work.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="work_center_id"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Work Order Action -->
    <record id="action_work_order" model="ir.actions.act_window">
        <field name="name">Work Orderss</field>
        <field name="res_model">manufacturing.work.order</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>