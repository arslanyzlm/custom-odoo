<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Work Center List View -->
    <record id="view_work_center_tree" model="ir.ui.view">
        <field name="name">manufacturing.work.center.list</field>
        <field name="model">manufacturing.work.center</field>
        <field name="arch" type="xml">
            <list string="Work Centers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="capacity"/>
                <field name="time_efficiency"/>
                <field name="costs_hour"/>
                <field name="work_order_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Work Center Form View -->
    <record id="view_work_center_form" model="ir.ui.view">
        <field name="name">manufacturing.work.center.form</field>
        <field name="model">manufacturing.work.center</field>
        <field name="arch" type="xml">
            <form string="Work Center">
                <header>
                    <button name="action_view_work_orders" type="object" 
                            string="View Work Orders" class="oe_highlight"
                            invisible="work_order_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_work_orders" type="object" 
                                class="oe_stat_button" icon="fa-tasks">
                            <field name="work_order_count" widget="statinfo" 
                                   string="Work Orders"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="capacity"/>
                            <field name="time_efficiency"/>
                            <field name="costs_hour"/>
                            <field name="resource_calendar_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Work Center Kanban View -->
    <record id="view_work_center_kanban" model="ir.ui.view">
        <field name="name">manufacturing.work.center.kanban</field>
        <field name="model">manufacturing.work.center</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="code"/>
                <field name="work_order_count"/>
                <field name="capacity"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="code"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span>Capacity: <field name="capacity"/></span>
                                        </div>
                                        <div class="col-6">
                                            <span>Work Orders: <field name="work_order_count"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Work Center Action -->
    <record id="action_work_center" model="ir.actions.act_window">
        <field name="name">Work Centers</field>
        <field name="res_model">manufacturing.work.center</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first work center
            </p>
            <p>
                Work centers represent the different stations or machines 
                where manufacturing operations are performed.
            </p>
        </field>
    </record>
</odoo>