<odoo>
  <record id="view_stock_lot_form_steel" model="ir.ui.view">
    <field name="name">stock.lot.form.steel</field>
    <field name="model">stock.lot</field>
    <!-- Use the actual External ID you found (likely stock.view_lot_form) -->
    <field name="inherit_id" ref="stock.view_production_lot_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Steel">
          <group>
            <group>
              <field name="x_certificate_no"/>
              <field name="x_heat_no"/>
              <field name="x_vendor_id"/>
            </group>
            <group>
              <field name="x_actual_diameter_mm"/>
              <field name="x_initial_length_mm"/>
              <field name="x_received_weight_kg"/>
            </group>
          </group>
          <group>
            <group>
              <field name="x_remaining_length_mm" readonly="1"/>
            </group>
            <group>
              <field name="x_remaining_weight_kg" readonly="1"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
