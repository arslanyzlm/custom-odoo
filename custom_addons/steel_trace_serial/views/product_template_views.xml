<odoo>
  <record id="view_product_template_form_steel_inherit" model="ir.ui.view">
    <field name="name">product.template.form.steel.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[@name='general_information']" position="inside">
        <!-- Keep the field on the form so modifiers can read it -->
        <field name="x_show_steel_helpers" invisible="1"/>
        <group string="Steel Helpers" invisible="[['x_show_steel_helpers','=',False]]">
          <field name="x_density_kg_m3"/>
          <field name="x_nominal_diameter_mm"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
